<div class="container-fluid">
 <div class="row">
  <div class="col-md-4 col-md-offset-4 col-sm-4 col-sm-offset-4">
   <div class="login-panel panel panel-default">
    <div class="panel-heading">
     <h3 class="panel-title">Inicar sesión</h3>
    </div>
    <div class="panel-body">
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <fieldset>
       <div class="form-group">
        <%= devise_error_messages! %>

        <div class="form-group">
         <%= f.email_field :email, autofocus: true, placeholder: "E-mail", class: "form-control" %>
        </div>

        <div class="form-group">
         <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", class: "form-control" %>
        </div>

        <div class="form-group">
         <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Contraseña", class: "form-control" %>
        </div>

        <%= f.submit "Inicar", class: "btn btn-lg btn-success btn-block" %>

       </div>
      </fieldset>
     <% end %>

     <%= render "devise/shared/links" %>

    </div>
   </div>
  </div>
 </div>
</div>
