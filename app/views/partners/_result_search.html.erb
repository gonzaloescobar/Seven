<table class="table">
 <thead>
  <tr>
   <%= render partial: "pager", locals: { keywords: @keywords, page: @page } %>
  </tr>
  <tr>
   <th>Apellido</th>
   <th>Nombre</th>
   <th>Fecha de Alta</th>
   <th colspan="2"></th>
  </tr>
 </thead>

 <tbody>
  <div id="partners">
   <% @partners.each do |partner| %>
    <tr>
     <td><%= partner.last_name %></td>
     <td><%= partner.first_name %></td>
     <td><%= partner.created_at.strftime("%d/%m/%Y") %></td>
     <td>
      <%= button_to edit_partner_path(partner), {method: :get, class: "btn btn-info"} do %>
       <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> Editar
      <% end %>
     </td>
     <td>
      <%= button_to partner, { method: :delete, data: { confirm: '¿Está seguro?' }, class: "btn btn-danger" } do %>
       <span class="glyphicon glyphicon-trash" aria-hidden="true"> </span> Eliminar
      <% end %>
     </td>
    </tr>
   <% end %>
  </div>
 </tbody>
</table>
